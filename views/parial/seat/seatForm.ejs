<div class="seat-cont">
    <div class="seat-form-info">
        <div class="seat-title">
            <h2 style="color: #333;">Passangers info</h2>
        </div>
        <div class="inputs">
            <input id="fname" type="text" name="psName" placeholder="First name">
            <input id="lname" type="text" name="psLname" placeholder="Last name">
            <input id="ssn" type="text" name="psSSN" placeholder="SS number">
            <input id="email" type="text" name="psEmail" placeholder="Email address">
            <input id="seatno" type="text" name="psSeatno" placeholder="Seat number">
            <input id="flightno" type="text" name="psFlightno" placeholder="flight number">
            <input id="price" type="text" name="psPrice" placeholder="price">
        </div>

        
    </div>
    <div class="seat-item">
    
        <div id="listOfSeats">
            <% if(info){ %> 
                <% for(let i = 0; i < info.rows.length; i++){ %>
                    <h3 style="margin: 0; color: #333;">Business seats:</h3>
                    <div class="business-seats">
                        <% for(let b = 0; b < info.rows[i].p_seat_economy; b++){ %>
                            <p class="scel" id="<%= b %>" onclick="pickMe(this)"> B<%= b %> </p>
                        <%}%>
                    </div>
                    <h3 style="margin: 0; color: #333;">Economy seats:</h3>

                    <div class="economy-seats">
                        <% for(let e = 0; e < info.rows[i].p_seat_business; e++){ %>
                            <p class="scel" id="<%= e %>" onclick="pickMe(this)"> E<%= e %> </p>
                        <%}%>
                    </div>
                    
                <%}%>
             <%} else{%>
                <p>No seats ss</p>
             <%}%>
        </div>
    </div>
</div>
<script>
    function pickMe(e){
        $("#seatno").val(e.innerText)
        console.log(e.innerText)
    }
</script>

