<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="./styles/parts/home.css">

  <title><%= title %></title>
</head>

<body style="margin: 0;">
  <%- include('parial/header'); -%>
  <div id="seatWindow"
    style="display: none; position: fixed; width: 100vw; height: 100vh; margin: auto; top: 0; z-index: 1; background: #9999;">
    <%- include('parial/seat'); -%>
  </div>

  <div class="app">
    <i class="fa-solid fa-xmark-large"></i>

    <div class="switch-cont">
      <p class="text-switch">Dark theme </p>
      <div class="thebtn">

        <input type="checkbox" hidden="hidden" id="username">
        <label class="switch" for="username"></label>
      </div>
    </div>


    <div class="form-home">
      <div class="optionBtn">
        <button class="advancedSearch" id="advancedbtn">Advanced search</button>
        <button class="mapSearch" id="mapbtn">map Search</button>
        <button class="countrySearch" id="countrybtn">country Search</button>
      </div>
      <div class="forms-con">

        <!-- advanced search window -->

        <form id="advancedS" action="api" method="POST">
          <div class="title_form">
            <h1 class="title">Advanced search</h1>
          </div>
          <div class="inputs">

            <div class="departure">
              <label for="depInput">Departure name</label>
              <input type="text" class="dep" name="departure" id="depInput" placeholder="Departure..."
                value="<%= typeof departure != 'undefined' ? departure : '' %>">
              <label for="depDate">Departure Date</label>
              <input type="date" name="depDate" class="depDate" id="depDate">

            </div>
            <div class="destination">
              <label for="desInput">Destination name</label>
              <input type="text" class="des" name="destination" id="desInput" placeholder="Destination..."
                value="<%= typeof destination != 'undefined' ? destination : '' %>">

              <label for="desDate">Destination Date</label>
              <input type="date" name="desDate" class="desDate" id="desDate">
            </div>

          </div>
          <div class="checkbox">
            <label>
              <input type="checkbox" value="tur-retur"> Tur-retur
            </label>
          </div>
          <!--
                  <h1 style="color: #999;">Search by country name</h1>

