                    <input type="date" class="desDate" id="desDate">
                    
                  </div>
                -->
          <div class="btn">
            <button class="searchBtn" id="formA" type="submit">Search</button>
          </div>

        </form>

        <!-- country search window -->

        <form id="countryS" style="transform: translateX(-200vh); opacity: 0; transition: 0.5s;" action="api"
          method="POST">
          <div class="title_form">
            <h1 class="title">Country name search</h1>
          </div>
          <div class="inputs">

            <div class="departure">
              <label for="depInput">Country name</label>
              <input type="search" class="dep" name="nameSearch" id="depInput" placeholder="country name..."
                value="<%= typeof nameSearch != 'undefined' ? nameSearch : 'Sweden' %>">
              <label for="countrydepDate">Departure Date</label>
              <input type="date" class="countrydepDate" id="countrydepDate">
            </div>

          </div>
          <div class="btn">
            <button class="searchBtn" type="submit">Search</button>
          </div>
        </form>


        <!-- map search window -->
        <div id="mapS" style="transform: translateX(-200vh); opacity: 0; transition: 0.5s;">
          
          <div class="inputs">
            <%- include('parial/mapS'); -%>  
          </div>
        </div>
      </div>
    </div>



  <!-- result window -->
  <div class="flightlist-container">
    <div class="flight-title">
      <h1 style="color: #999 ">List of flights.</h1>
    </div>
    <div id="list" list>
      no item...
